apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: otel-demo
  namespace: argocd
spec:
  destination:
    server: https://kubernetes.default.svc
    namespace: observability-demo
  project: default
  sources:
    - repoURL: 'https://github.com/APCichewicz/cluster.git'
      ref: values
      targetRevision: HEAD
      name: values  # Added name for referencing
    - repoURL: 'https://open-telemetry.github.io/opentelemetry-helm-charts'
      targetRevision: 0.33.8
      chart: opentelemetry-demo
      helm:
        valueFiles:
          - $values/argocd/app_of_apps/monitoring/values/otel-demo-values.yaml
  # Moved syncPolicy to spec level
  syncPolicy:
    syncOptions:
      - Validate=false
      - CreateNamespace=true
      - ServerSideApply=true
      - RespectIgnoreDifferences=true
    automated:
      prune: false
      selfHeal: false